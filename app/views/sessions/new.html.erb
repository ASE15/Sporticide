<%= form_tag sessions_path do %>
  <div class="form-group has-feedback">
    <%= text_field_tag :username, params[:username], {class:"form-control", placeholder:"Username"} %>
    <span class="glyphicon glyphicon-user form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback">
    <input type="password" name="passwd" class="form-control" placeholder="Password">
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>
  <div class="row">
    <!-- /.col -->
    <div class="col-xs-4 pull-right">
      <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
    </div>
    <!-- /.col -->
  </div>
<% end %>

<div class="social-auth-links text-center">
  <p>- OR -</p>
  <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using
    Facebook</a>
</div>
<!-- /.social-auth-links -->

<a href="<%= new_user_path %>" class="text-center">Register a new membership</a>