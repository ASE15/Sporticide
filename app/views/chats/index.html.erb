<% content_for :title do %>
    <h1>
      Chats
      <small>Chats with your friends</small>
    </h1>
<% end %>

<div class="box box-primary">
<div class="box-body">
<table class="table table-striped table-hover table-condensed table-responsive">
  <thead>
  <tr>
    <th style="width:70px;"></th>
    <th>User</th>
    <th>Last message</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @chats.each do |c| %>
      <tr>
        <td><% if c.unread?(current_user) %>
              <span class="label label-danger">new</span>
              <% end %>
        </td>
        <td><%= c.get_partner(current_user).get_name %></td>
        <td><%= (c.get_last_message.nil?) ? 'no' : c.get_last_message.datetime.strftime("%d %b %Y, %H:%M") %></td>

        <td>
          <%= link_to 'Show Chat', chat_path(c), class: "btn btn-xs btn-primary" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

      </div>
</div>