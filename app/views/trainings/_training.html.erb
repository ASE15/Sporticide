<p>
  <strong>Title:</strong>
  <%= training.title %>
</p>

<p>
  <strong>Sport:</strong>
  <%= training.sport %>
</p>

<p>
  <strong>is Public?:</strong>
  <%= training.isPublic %>
</p>

<p>
  <strong>Description:</strong>
  <%= training.description %>
</p>

<p>
  <strong>Created:</strong>
  <%= training.created_at %>
</p>

<p>
  <strong>Owner:</strong>
  <%= training.owner.email %>
</p>

<strong>Member:</strong>
<ul>
  <% training.users.each do |m| %>
    <li><%= m.email %></li>
  <% end %>
</ul>

<% if training.users.exists?(current_user) %>
    <%= link_to 'Leave this training', training_leave_path(training), class: 'btn btn-danger' %>
<% else %>
    <%= link_to 'Join this training', training_join_path(training), class:'btn btn-default' %>
<% end %>