<% if user_signed_in? %>
<li class="dropdown user user-menu">
  <!-- Menu Toggle Button -->
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <!-- The user image in the navbar-->
    <!--<img src="dist/img/user2-160x160.jpg" class="user-image" alt="User Image">-->
    <%= image_tag "user0.png", :class => "user-image", :alt => "User Image" %>
    <!-- hidden-xs hides the username on small devices so only the image appears. -->
    <span class="hidden-xs">
      <%= current_user.get_name %>
    </span>
  </a>
  <ul class="dropdown-menu">
    <!-- The user image in the menu -->
    <li class="user-header">
      <!--<img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">-->
      <%= image_tag "user0.png", :class => "img-circle", :alt => "User Image" %>
      <p>
        <%= current_user.get_name %>
        <small>Member since <%= current_user.created_at.strftime("%b. %Y") %></small>
      </p>
    </li>
    <!-- Menu Body -->
    <li class="user-body">
      <div class="pull-right">
        <a href="<%= friends_path %>" class="btn btn-default btn-flat"> Friends</a>
      </div>
    </li>
    <!-- Menu Footer-->
    <li class="user-footer">
      <div class="pull-left">
        <a href="<%= profile_path %>" class="btn btn-default btn-flat">Profile</a>
      </div>
      <div class="pull-right">
        <a href="<%= session_path(session) %>" data-method='delete' class="btn btn-default btn-flat"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
      </div>
    </li>
  </ul>
</li>
<% else %>
    <li><a href="<%=new_user_path%>"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
    <li><a href="<%=new_session_path%>"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
<% end %>