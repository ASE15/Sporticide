<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sporticide</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- Rails stylesheets and javascripts -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <%= stylesheet_link_tag    'adminlte', media: 'all', 'data-turbolinks-track' => true %>

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    
    <!-- rails csrf meta tags -->
    <%= csrf_meta_tags %>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

      <!-- Main Header -->
      <header class="main-header">

        <!-- Logo -->
        <a href="<%= root_path %>" class="logo">
          <!-- mini logo for sidebar mini 50x50 pixels -->
          <span class="logo-mini"><b>SPRT</b></span>
          <!-- logo for regular state and mobile devices -->
          <span class="logo-lg"><b>Sporticide</b></span>
        </a>

        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
          <!-- Sidebar toggle button-->
          <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
          </a>
          <!-- Navbar Right Menu -->
          <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">

              <!-- Messages: style can be found in dropdown.less-->
              <%= render 'layouts/messages' %>

              <!-- Notifications Menu -->
              <%= render 'layouts/notifications' %>
              <!-- Tasks Menu -->
              <%= render 'layouts/trainings' %>
              <!-- User Account Menu -->
              <%= render 'layouts/user_control' %>
            </ul>
          </div>
        </nav>
      </header>
      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

          <!-- Sidebar Menu -->
          <%= render 'layouts/navigation' %>
        </section>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->

        <section class="content-header">
          <%= yield :title %>
        </section>

        <!-- Main content -->
        <section class="content">

          <% if alert or flash[:error] %>

              <div class="alert alert-danger alert-dismissible">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                <%= alert ? alert : flash[:error] %>
              </div>
          <% end %>
          <% if notice or flash[:notice] %>
              <div class="alert alert-info alert-dismissible">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                <h4><i class="icon fa fa-info"></i> Info!</h4>
                <%= notice ? notice : flash[:notice] %>
              </div>
          <% end %>

          <!-- rails body yield -->
          <%= yield %>

          <!-- Your Page Content Here -->

        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->

      <!-- Main Footer -->
      <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
          Sporticide.
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; <%= DateTime.now.strftime("%Y") %> Team Be.</strong> All rights reserved.
      </footer>
    </div><!-- ./wrapper -->


    <%= javascript_include_tag 'adminlte_bottom', 'data-turbolinks-track' => true %>

  </body>
</html>
