<h1>Logs</h1>

<% content_for :title do %>
    <h1>
      All Logs of training
      <small>Overview</small>
    </h1>
<% end %>

<div class="box box-primary">
  <div class="box-body">


<table class="table table-striped table-hover table-condensed table-responsive"><br>
  <tr>
    <th>User</th>
    <th>Intensity</th>
    <th>Rating</th>
    <th>Comment</th>
    <th></th>
  </tr>

  <% @logs.each do |l| %>
      <tr>
        <td><%= l.user.email %></td>
        <td><%= l.intensity %></td>
        <td><%= l.rating %></td>
        <td><%= l.comment %></td>
        <td>
            <% if is_own_log?(l) %>
                <%= link_to 'Edit', edit_training_trainingsession_log_path(l), class: "btn btn-xs btn-warning" %>
                <%= link_to 'Destroy', training_trainingsession_logs_path(l), method: "delete", data: {confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
            <% end %>
        </td>
      </tr>
  <% end %>
</table>

      </div>
    </div>