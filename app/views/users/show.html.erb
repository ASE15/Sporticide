<%- model_class = User -%>
<% content_for :title do %>
      <h1>
        CyberCoach User
        <small>User overview</small>
      </h1>
<% end %>

<div class="box box-primary">
  <div class="box-header with-border">
    <h4 class="box-title"><%= @user.username %></h4>
  </div>
  <div class="box-body">

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @user.username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong>Real name:</strong></dt>
  <dd><%= @user.realname %></dd>
  <dt><strong>Public visible status:</strong></dt>
  <dd><%= @user.publicvisible %></dd>
</dl>


<div class="form-actions">
  <%= link_to 'Back',
              users_path, :class => 'btn btn-default' %>
  <%  if (not current_user.nil?) && @user.username == current_user.username %>
  <%= link_to 'Edit',
              edit_user_path(@user), :class => 'btn btn-primary' %>
  <%= link_to 'Destroy',
              user_path(@user),
              :method => 'delete',
              :data => {:confirm => 'Are you sure?'},
              :class => 'btn btn-danger' %>
      <% end %>
</div>

      </div>
    </div>