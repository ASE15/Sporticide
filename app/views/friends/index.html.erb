<h1>My Friends</h1>

<% if @myfriends.nil? %>
    Haha. you have no friends!
<% else %>
<table class="table table-striped table-hover table-condensed table-responsive">
  <thead>
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>


  </thead>
  <tbody>
  <% @myfriends.each do |friend| %>
      <tr>
        <td><%= friend.id %></td>
        <td><%= link_to friend.username, local_user_path(friend) %></td>
        <td>
          <%= link_to "Remove friend", friend_path(myoldfriend: friend), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>