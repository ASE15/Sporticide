

<% no_session =  training_notifier.system_log.training_session.nil? %>

<% if no_session %>
<a href="#">
<% else %>
<a href="<%= training_path(training_notifier.system_log.training_session.training) %>">
<% end %>

    <div class="pull-left">
      <!-- User Image -->
      <i class="fa fa-users text-aqua" style="margin: 8px 0 0 0 !important;"></i>
    </div>
    <!-- Message title and timestamp -->
    <h4 style="margin: 0 0 0 25px !important;">
      <% if no_session %>
          <%= training_notifier.system_log.info %>
      <% else %>
        <%= training_notifier.system_log.training_session.training.title %>
      <% end %>
      <small><i class="fa fa-clock-o"></i> <%= training_notifier.created_at.strftime("%d %b, %H:%M") %></small>
    </h4>
    <!-- The message -->
    <p style="margin: 0 0 0 25px !important;"><%= training_notifier.system_log.log %></p>
  </a>