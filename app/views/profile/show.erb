<% content_for :title do %>
    <h1>
      Your profile
      <small>Overview</small>
    </h1>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6">

      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-sm-8">
              <h2><%= @profile.username %></h2>
              <p><strong>Realname: </strong> <%= @profile.firstname %> <%= @profile.lastname %> </p>
              <p><strong>Address: </strong> <%= @profile.address %> <%= @profile.address_nr %> <%= @profile.plz %> <%= @profile.place %> </p>
              <p><strong>Age: </strong> <%= @profile.age_at(Date.today,@profile.date)%> years </p>
              <p><strong>Height: </strong> <%= @profile.height %> cm </p>
              <p><strong>Weight: </strong> <%= @profile.weight %> kg </p>


            </div><!--/col-->
            <!--<div class="col-xs-12 col-sm-4 text-center">-->
              <!--<img src="http://api.randomuser.me/portraits/men/49.jpg" alt="" class="center-block img-circle img-responsive">-->
            <!--</div>&lt;!&ndash;/col&ndash;&gt;-->

            <% if @profile == current_user %>
            <div class="col-md-8">
              <%= link_to 'Edit', edit_profile_path(@profile), class: "btn btn-info pull-left"%>
            </div><!--/col-->
            <% end %>

          </div><!--/row-->
        </div><!--/panel-body-->
      </div><!--/panel-->



    </div>
  </div>
</div>